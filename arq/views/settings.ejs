<%- include('partials/head', { title: 'Perfil' , currentPage: 'settings' }) %>

    <main class="card-detalhes-container py-5">
        <div class="home-container">


            <h2 class="section-title mb-4 gap">
                <a href="/" class="btn btn-outline-light" title="Voltar">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                </a>
                Perfil do Usuário
            </h2>

            <div>
                <div>

                    <div class="p-4 shadow-sm">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <div class="user-avatar-sett">
                                    <img src="/images/<%= user.foto_perfil %>" alt="Usuário">
                                </div>
                            </div>

                            <div class="col-md-8 hist-info">
                                <p>Nome:
                                    <%= user ? user.nome : 'Visitante' %>
                                </p>
                                <p>Email:
                                    <%= user ? user.email : 'Não disponível' %>
                                </p>

                                <hr style="border: none; height: 1px; background-color: #ddd;">

                                <div class="side">
                                    <a href="/logout" class="btn btn-danger" onclick="return confirmLogout()">
                                        <i class="fa fa-sign-out"></i> Sair da conta
                                    </a>
                                
                                <form action="/deleteUser" method="POST"
                                    onsubmit="return confirm('Tem certeza que deseja deletar esta conta? Você não terá mais acesso às suas publicações!');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-trash"></i> Deletar conta
                                    </button>
                                </form>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </main>
    <script>
        function confirmLogout() {
            return confirm('Tem certeza que deseja sair da conta?');
        }
    </script>