<%- include('partials/head', { title: 'Home' , currentPage: 'home' }) %>

  <main class="home-container">
    <div class="container-fluid px-3 py-4">
      <h2 class="section-title mb-4">Explore as publicações mais recentes</h2>

      <div class="row g-4">
        <% if (typeof search !=='undefined' ) { %>
          <% if (card.length===0) { %>
            <p class="text-white">Nenhuma história encontrada.</p>
            <% } %>
              <% } %>
                <% card.forEach(card=> { %>
                  <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <a href="/card/<%= card.id %>" class="text-decoration-none text-reset">
                      <div class="card h-100 border-0 shadow-sm hover-effect">
                        <div class="card-img-top position-relative"
                          style="height: 180px; background-image: url('/images/covers/<%= card.capa %>'); background-size: cover;">
                          <span class="badge bg-dark bg-opacity-75 position-absolute top-10 start-10">
                            <%= card.genero %>
                          </span>
                        </div>
                        <div class="card-body">
                          <h5 class="card-title text-dark">
                            <%= card.titulo %>
                          </h5>
                          <p class="card-text text-muted small">Por: <%= card.autornome %>
                          </p>
                          <div>
                            <% card.tags.split(',').forEach(tag=> { %>
                              <span class="badge bg-secondary text-white me-1">
                                <%= tag.trim() %>
                              </span>
                              <% }) %>
                          </div>
                        </div>
                      </div>
                    </a>
                  </div>
                  <% }) %>


      </div>
    </div>

    <!-- Seção de Feedback -->
    <section class="feedback-section mt-5">
      <div class="feedback-container">
        <div class="feedback-header">
          <h3>Nos ajude a melhorar sua experiência na plataforma!</h3>
          <p>Seu feedback é essencial para evoluirmos juntos</p>
        </div>

        <form class="feedback-form" id="feedbackForm">
          <div class="form-group">
            <label for="feedbackType">Tipo de Feedback:</label>
            <select id="feedbackType" class="form-control" required>
              <option value="" disabled selected>Selecione uma opção</option>
              <option value="suggestion">Sugestão</option>
              <option value="bug">Reportar Problema</option>
              <option value="praise">Elogio</option>
              <option value="other">Outro</option>
            </select>
          </div>

          <div class="form-group">
            <label for="feedbackMessage">Mensagem:</label>
            <textarea id="feedbackMessage" class="form-control" rows="4" placeholder="Descreva com detalhes..."
              required></textarea>
          </div>

          <div class="form-group">
            <label for="userEmail">Email (opcional):</label>
            <input type="email" id="userEmail" class="form-control" placeholder="Se desejar um retorno...">
          </div>

          <button type="submit" class="feedback-submit-btn">
            <i class="fas fa-paper-plane"></i> Enviar Feedback
          </button>
        </form>
      </div>
    </section>
  </main>